<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="vertical"
    tools:context=".FirstFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/editText2Mobile"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Mobile"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/editTextCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:hint="Enter College"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextDegree"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Degree"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/editTextPercentage"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
            android:hint="InterPercentage"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/editTextDOB"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter DOB"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/editText7"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Addhar"
            android:inputType="textPersonName"
            />

        <Button
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           android:layout_marginTop="20dp"
            android:text="Submit"
            />
    </LinearLayout>


</LinearLayout>